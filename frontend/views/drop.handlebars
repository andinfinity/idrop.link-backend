<nav class="clearfix">
    <div class="idl-logo">
        <a href="//idrop.link">idrop.link</a>
    </div>
</nav>

<div class="drop-wrap">
    <div class="drop">
        {{#if path}}
            {{#if is_image}}
                <img class="drop-img" alt="broken" src="{{path}}">
            {{else}}
                <a href="{{path}}" title="Download {{title}}">
                    <button>Download</button>
                </a>
            {{/if}}
           <div class="drop-title">{{title}}</div>
        {{else}}
            <img class="loader" alt="loader" src="/public/img/loader.gif">
            <p>The drop is being uploaded.</p>
        {{/if}}
    </div>
</div>
